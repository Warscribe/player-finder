<div class="w320 margin-auto">
  <h3>Forgot your password?</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="input-field">
      <%= f.email_field :email %>
      <%= f.label :email %>
    </div>

    <div class="full-width py8">
      <%= f.submit "Reset my Password", class: 'btn full-width' %>
    </div>
  <% end %>
</div>