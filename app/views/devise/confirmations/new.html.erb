<div class="w320 margin-auto">
  <h2>Resend Confirmation</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <div class="input-field">
      <%= f.label :email %>
      <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      <span class="abs bot-0 fs13 red-text"><%= resource.errors[:email][0] %></span>
    </div>

    <div class="full-width py16">
      <%= f.submit "Resend instructions", class: 'btn full-width' %>
    </div>
  <% end %>
</div>