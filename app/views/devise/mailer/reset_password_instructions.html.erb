<table class="module" role="module" data-type="wysiwyg" border="0" cellpadding="0" cellspacing="0" width="100%" style="table-layout: fixed;">
  <tr>
    <td role="module-content" style="padding: 0px 0px 0px 0px;">
      <div>&nbsp;</div>
      <div style="text-align: center;">
        <span style="font-family:verdana,geneva,sans-serif;">
          <span style="font-size:48px;">
            <span style="color:#bf360c;">Warscribe</span>
          </span>
        </span>
      </div>
      <div>&nbsp;</div> 
      <div>
        <span style="font-family:lucida sans unicode,lucida grande,sans-serif;">
          <span style="color:#898989;line-height: 24px;">Hello,</span>
        </span>
      </div>
      <div>&nbsp;</div> 
      <div>
        <span style="font-family:lucida sans unicode,lucida grande,sans-serif;">
          <span style="color:#898989;line-height: 24px;">A password reset was recently requested. If this request was not made by you, please contact warscribe.contact@gmail.com</span>
